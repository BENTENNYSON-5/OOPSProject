<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starting_back"
    tools:context=".Divisions">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="285dp"
        android:layout_height="35dp"
        android:autoSizeTextType="uniform"
        android:text="Choose Division you belong to: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <RadioButton
        android:id="@+id/wp"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginTop="56dp"
        android:text="Working Professional"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/js"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginTop="56dp"
        android:text="Job seeker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wp"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/hm"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginTop="56dp"
        android:text="Home-maker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/js"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/done1"
        android:layout_width="97dp"
        android:layout_height="39dp"
        android:text="Done"
        app:backgroundTint="#229C27"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.799"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hm"
        app:layout_constraintVertical_bias="0.544" />

    <RadioButton
        android:id="@+id/o"
        android:layout_width="146dp"
        android:layout_height="43dp"
        android:text="Others"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hm"
        app:layout_constraintVertical_bias="0.155" />

</androidx.constraintlayout.widget.ConstraintLayout>